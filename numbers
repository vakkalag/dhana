n=int(input('enter number:'))
l=1
u=4
for num in range(1,u+1)
    print (num)
for i in range(0,n+1):
    for k in range(1,i+1):
        print(" ",end=" ")
    for j in range(1,n+1,i-1):
        print("l",end=" ")
    print("\n")
for i in range(1,n+1):
    for k in range(-1,i):
        print (" ",end=" ")
    for j in range(n-i+1,1-1):
            print("l",end=" ")
    print("\n")
